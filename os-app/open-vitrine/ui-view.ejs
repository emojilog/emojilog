<%
locals.OLSKPageTitle = OLSKLocalized('EMTVitrineTitle');
locals.OLSKPageDescription = OLSKLocalized('EMTVitrineDescription');
locals.OLSKPageAssets = [
	'/_shared/__external/normalize.css/normalize.css',
	'/_shared/__external/OLSKDecor/ui-style.css',
	'/_shared/common/ui-style.css',
	'ui-style.css',
];
locals.OLSKPageUseLivereload = process.env.NODE_ENV === 'development';
locals.OLSKPagePublicConstants = {
	OLSKSharedPageCurrentLanguage: OLSKSharedPageCurrentLanguage,
};
%>

<div class="EMTVitrine OLSKDecor OLSKDecorCapped">

<%- include('../_shared/__external/OLSKLanguageSwitcher/main.ejs') %>

<hr role="presentation" />

<div class="EMTVitrineCrown OLSKCommonCard OLSKCommonCrownCard">
	<img class="EMTVitrineCrownIcon" src="/_shared/EMTRootLink/ui-assets/identity.svg" role="presentation" />
	<section>
		<span class="EMTVitrineCrownName"><%= OLSKLocalized('EMTVitrineTitle') %></span>
		<span class="EMTVitrineCrownBlurb"><%= OLSKLocalized('EMTVitrineDescription') %></span>
	</section>
</div>

<p class="OLSKCommonWhatIsIt"><%= OLSKLocalized('OLSKCommonWhatIsItText') %></p>

<article class="EMTVitrineContent">

<%- OLSKStringReplaceTokens(EMTVitrineContent, {}) %>

<h1 class="EMTVitrineFeaturesHeading"><%= OLSKLocalized('OLSKWordingFeatures') %></h1>

<%- include('../../node_modules/OLSKAppFeatureList/main.ejs').replace(/node_modules/g, '_shared/__external') %>

</article>

<h1 class="EMTVitrineSupportHeading"><%= OLSKLocalized('OLSKWordingFeedbackHeading') %></h1>
<p class="EMTVitrineSupportBlurb"><%= OLSKLocalized('OLSKWordingFeedbackBlurb') %></p>

<hr role="presentation" />

<%- include('../_shared/__external/ROCORootLink/main.ejs') %>

</div>
