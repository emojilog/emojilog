<%
locals.OLSKPageTitle = OLSKLocalized('EMLVitrineTitle');
locals.OLSKPageDescription = OLSKLocalized('EMLVitrineDescription');
locals.OLSKPageAssets = [
	'/_shared/__external/normalize.css/normalize.css',
	'/_shared/__external/OLSKDecor/ui-style.css',
	'/_shared/common/ui-style.css',
	'ui-style.css',
];
locals.OLSKPageUseLivereload = process.env.NODE_ENV === 'development';
locals.OLSKPagePublicConstants = {
	OLSKSharedPageCurrentLanguage: OLSKSharedPageCurrentLanguage,
};
%>

<div class="EMLVitrine OLSKDecor OLSKDecorCapped">

<%- include('../_shared/__external/OLSKLanguageSwitcher/main.ejs') %>

<hr role="presentation" />

<div class="EMLVitrineCrown OLSKCommonCard OLSKCommonCrownCard">
	<img class="EMLVitrineCrownIcon" src="/_shared/EMLRootLink/ui-assets/identity.svg" role="presentation" />
	<section>
		<span class="EMLVitrineCrownName"><%= OLSKLocalized('EMLVitrineTitle') %></span>
		<span class="EMLVitrineCrownBlurb"><%= OLSKLocalized('EMLVitrineDescription') %></span>
	</section>
</div>

<p class="OLSKCommonWhatIsIt"><%= OLSKLocalized('OLSKCommonWhatIsItText') %></p>

<article class="EMLVitrineContent">

<%- OLSKStringReplaceTokens(EMLVitrineContent, {}) %>

<h1 class="EMLVitrineFeaturesHeading"><%= OLSKLocalized('OLSKWordingFeatures') %></h1>

<%- include('../../node_modules/OLSKAppFeatureList/main.ejs').replace(/node_modules/g, '_shared/__external') %>

</article>

<h1 class="EMLVitrineSupportHeading"><%= OLSKLocalized('OLSKWordingFeedbackHeading') %></h1>
<p class="EMLVitrineSupportBlurb"><%= OLSKLocalized('OLSKWordingFeedbackBlurb') %></p>

<hr role="presentation" />

<%- include('../_shared/__external/ROCORootLink/main.ejs') %>

</div>
